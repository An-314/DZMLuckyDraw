{
    "name": "wei-gacha",
    "version": "1.0.4",
    "description": "⌈未来式⌋抽卡器",
    "main": "main.js",
    "bin": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder",
        "pkg": "pkg . --out-dir dist"
    },
    "build": {
        "files": [
            "css/**/*",
            "fig/**/*",
            "js/**/*",
            "lib/**/*",
            "index.html",
            "lucky-draw.html",
            "main.js",
            "preload.js"
        ],
        "win": {
            "target": "nsis"
        }
    },
    "pkg": {
        "scripts": [
            "main.js"
        ],
        "targets": [
            "node14-win-x64"
        ],
        "outputPath": "dist"
    },
    "devDependencies": {
        "electron": "latest",
        "electron-builder": "latest",
        "pkg": "latest"
    }
}
